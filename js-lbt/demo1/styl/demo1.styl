@import "./pub/head"

.wrap 
	width 1200px
	border 1px solid #ccc
	padding-bottom 15px
	margin 50px auto
	
	.title 
		position relative
		border-bottom 1px dotted #222
		
	.title h3 
		font-size 14px
		color #333
		height 45px
		line-height 45px
		padding 0 9px
		border-top 2px solid #222
		font-weight normal
		
	#con-a 
		overflow hidden
		width 1180px !important
		position relative
		padding-top 10px
		margin 0 auto
		
	#con-a ul
		width 1180px
		list-style none
		
	#con-a ul li 
			width 180px
			float left
			margin-right 20px
	
	#con-a li a
			display block
			
	#con-a ul li a span 
			display block
			height 30px
			line-height 30px
			text-align center
			color #666
			overflow hidden	
			font-size 14px
			
	#con-a ul li a span:hover 
				color blue
				text-decoration underline
				
	#con-a ul li em 
			font-size 14px
			color #f60
			font-weight 600
			font-weight normal
			height 18px 
			line-height 18px
			overflow hidden
			text-align center
			display block
			
			
	 	
		
		